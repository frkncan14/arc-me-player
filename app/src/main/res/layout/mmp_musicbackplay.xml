            android:id="@+id/mmp_musicback_starttime"
            style="@style/mmp_pop_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mmp_pop_starttime" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/mmp_toolbar_progressbar_bg_new_9"
            android:gravity="center" >

            <ProgressBar
                android:id="@+id/mmp_musicback_progress"
                style="@style/mmp_progressbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/mmp_musicback_endtime"
            style="@style/mmp_pop_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/mmp_pop_starttime" >
        </TextView>
    </LinearLayout>

