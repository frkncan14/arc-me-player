            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/music_icon_control_previous" >
        </ImageView>

        <ImageView
            android:id="@+id/mmp_musicback_play"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/mmp_thumbnail_player_icon_play"
            android:layout_gravity="center_vertical">
        </ImageView>

        <ImageView
            android:id="@+id/mmp_musicback_next"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
