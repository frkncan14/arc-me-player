<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frag_layout"
    android:background="#1E1E1E"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
            >

        <!-- Small VideoView -->

        <!-- Fullscreen VideoView -->

        <ImageView
            android:id="@+id/VideoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:layout_gravity="top|center"
            android:layout_marginTop="1dp"
            android:src="@drawable/video"/>
        <ImageView
            android:id="@+id/PhotoImageView"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:src="@drawable/pic"/>

        <ImageView
            android:id="@+id/MusicImageView"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:src="@drawable/music"/>

        <!-- Button on top of Fullscreen VideoView -->


        <!-- browse_frag Layout inside FrameLayout -->
        <LinearLayout
            android:id="@+id/browse_frag"
            android:layout_width="788dp"
            android:layout_height="371dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="140dp"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/browse_item_guide_align_bottom">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/l_r_key"
        android:layout_gravity="center_vertical" >
    </ImageView>

    <TextView
        style="@style/aow_mmp_guide_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mmp_select"
        android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
        android:layout_gravity="bottom|center_horizontal" >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/tk_cm_key_enter"
        android:layout_gravity="bottom|center_horizontal">
    </ImageView>

    <TextView
        style="@style/aow_mmp_guide_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mmp_input"
        android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
        android:layout_gravity="bottom|center_horizontal" >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/tk_cm_key_exit"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone" >
    </ImageView>

    <TextView
        style="@style/aow_mmp_guide_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mmp_exit"
        android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
        android:layout_gravity="bottom|center_horizontal"
        android:visibility="gone" >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/tk_cm_color_key_blue"
        android:layout_gravity="center_vertical" >
    </ImageView>

    <TextView
        style="@style/aow_mmp_guide_bottom_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mmp_change_mode"
        android:layout_marginStart="@dimen/browse_item_guide_drawable_padding" >
    </TextView>
    <!-- Rest of your layout -->
    </LinearLayout>
</RelativeLayout>
