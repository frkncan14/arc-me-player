<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_frag_layout"
    android:background="@drawable/mmp_main_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

       <LinearLayout
        android:id="@+id/browse_frag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/browse_icon_margin_start"
        />

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/browse_item_guide_align_bottom">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l_r_key"
                    android:layout_gravity="center_vertical" >
                </ImageView>

                <TextView
                    style="@style/aow_mmp_guide_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmp_select"
                    android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
                    android:layout_gravity="bottom|center_horizontal" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/tk_cm_key_enter"
                    android:layout_gravity="bottom|center_horizontal">
                </ImageView>

                <TextView
                    style="@style/aow_mmp_guide_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmp_input"
                    android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
                    android:layout_gravity="bottom|center_horizontal" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/tk_cm_key_exit"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone" >
                </ImageView>

                <TextView
                    style="@style/aow_mmp_guide_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmp_exit"
                    android:layout_marginStart="@dimen/browse_item_guide_drawable_padding"
                    android:layout_gravity="bottom|center_horizontal"
                    android:visibility="gone" >
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/tk_cm_color_key_blue"
                    android:layout_gravity="center_vertical" >
                </ImageView>

                <TextView
                    style="@style/aow_mmp_guide_bottom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mmp_change_mode"
                    android:layout_marginStart="@dimen/browse_item_guide_drawable_padding" >
                </TextView>
            </LinearLayout>


</RelativeLayout>
