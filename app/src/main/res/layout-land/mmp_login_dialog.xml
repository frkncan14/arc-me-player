<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/mm_bg"
	android:paddingTop="12dp"
	android:paddingBottom="3dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:orientation="vertical">
	<TableLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@string/mmp_user_name"
				android:textSize="@dimen/mmp_login_txt_size" />
			<EditText android:id="@+id/mmp_user_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.0"
				android:singleLine="true"
				android:editable="false"
				android:textSize="@dimen/mmp_menu_dialog_text_size"
				/>
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp"
				android:text="@string/mmp_password"
				android:textSize="@dimen/mmp_login_txt_size" />
			<EditText android:id="@+id/mmp_password"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:singleLine="true"
				android:editable="false"
				android:layout_weight="1.0"
				android:password="true"
				android:textSize="@dimen/mmp_menu_dialog_text_size"/>
		</TableRow>
	</TableLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:gravity="center"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="5dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			style="@style/multimedia_com_text"
			android:text="@string/mmp_confirm"
			android:drawablePadding="5dp"
			android:gravity="center"
			android:drawableStart="@drawable/tk_cm_key_enter">
		</TextView>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:layout_marginStart="20dp"
			style="@style/multimedia_com_text"
			android:text="@string/mmp_vkb"
			android:gravity="center"
			android:drawablePadding="5dp"
			android:drawableStart="@drawable/mmp_thumbnail_player_icon_play">
		</TextView>
	</LinearLayout>

</RelativeLayout>
